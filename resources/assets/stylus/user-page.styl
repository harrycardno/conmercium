.user-home-wrapper {

  display: flex;  
  flex-flow: row wrap;

  font-weight: bold;
  text-align: center;
}



.user-home-wrapper > * {
  padding: 10px;
  flex: 1 100%;
}

.main {
  text-align: left;
  line-height 20px
}
.flex-item-user:hover{
  background blue
  color white
  transition 400ms
  cursor: pointer

}

.aside-1 {
  background: white;
}

.aside-2 {
  background: white;
}



@media all and (min-width: 800px) {
  .main    { flex: 3 0px; }
  .aside-1 { order: 1; } 
  .main    { order: 2; }
  .aside-2 { order: 3; }
  .footer  { order: 4; }
}

